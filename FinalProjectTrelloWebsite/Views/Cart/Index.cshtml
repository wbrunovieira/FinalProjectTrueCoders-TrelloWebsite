<!DOCTYPE html>

<html>

<head>

</head>

<body>

    <h3>Cart Page</h3>

    <table>

        <tr>
            <th>Option</th>

            <th>Id</th>

            <th>Name</th>

            <th>Photo</th>

            <th>Price</th>

            <th>Quantity</th>

            <th>Sub Total</th>

        </tr>

        @foreach (var item in ViewBag.cart)
        {
    <tr>
        <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.ProductID">Remove</a></td>

        <td>@item.Product.ProductID</td>

        <td>@item.Product.name</td>

        <td><img src="@item.Product.imagePath" width="250" height="150" /></td>

        <td>@item.Product.price</td>

        <td>@item.Quantity</td>

        <td>@(item.Product.price * item.Quantity)</td>
    </tr>
        }
        <tr>

            <td align="right">Sum</td>

            <td>
                @ViewBag.total
            </td>
        </tr>
    </table>

    <br/>

    <a asp-controller="product" asp-action="index">Continue Shopping</a>

    <a asp-controller="checkout" asp-action="index" asp-route-id="">Go to Checkout</a>

</body>

</html>

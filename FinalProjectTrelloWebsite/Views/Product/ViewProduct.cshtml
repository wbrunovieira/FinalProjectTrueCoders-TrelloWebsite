@model Product

<h3>@Model.name Information</h3>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>image</th>
        

    </tr>
    <tr>
        <td>@Model.ProductID</td>
        <td>@Model.name</td>
        <td>@Model.price</td>
        <td>@Model.categoryID</td>
        
        <td><img src="@Model.imagePath" width="250" height="150" /></td>



    </tr>

</table>

<div style="display: block">
    <a href="/Product/UpdateProduct/@Model.ProductID">Update this Product</a>;
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />}
</div>
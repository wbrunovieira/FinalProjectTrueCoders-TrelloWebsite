@model IEnumerable<Product>

<h2>Products</h2>

<div style="display: block">
    <a href="/Product/InsertProduct/">Create a New Product</a>
</div>

<h1>Search Page</h1>

@using (Html.BeginForm("Search", "Product", FormMethod.Get, new { style = "margin-left:250px; margin-top:50px; margin-bottom:30px", @class = "thFormClass " }))
{
    <p>
        Search Trello Products by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />

    </p>
}


<table class="table">
    <tr>
        <th>ProductID</th>
        <th>name</th>
        <th>price</th>
        <th>imagePath</th>
        <th>categoryID</th>


    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
            <td>@product.ProductID</td>
            <td>@product.name</td>
            <td>@product.price</td>
            <td><img src="@product.imagePath" width="250" height="150" /></td>
            <td>@product.categoryID</td>


        </tr>

    }
</table>




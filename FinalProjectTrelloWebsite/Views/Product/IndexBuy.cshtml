@{
    Layout = null;
}
@using FinalProjectTrelloWebsite.Models;

<!DOCTYPE html>

<html>
<head>

</head>
<body>

    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Buy</th>
 
        </tr>
        @foreach(Product p in ViewBag.listProducts)
        {
            <tr>
                <td>@p.categoryID</td>
                <td>@p.name</td>
                <td>@p.price</td>
                <td>@Html.ActionLink("Order Now", "OrderNow", "ShoppingCart", new { id = p.ProductID})Order Now</td>
            </tr>

        }



    </table>
</body>
</html>

